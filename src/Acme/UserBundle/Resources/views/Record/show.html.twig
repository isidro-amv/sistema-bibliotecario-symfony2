<h1>Historial</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Dia_sacado</th>
            <td>{{ entity.diasacado|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Dia_regreso</th>
            <td>{{ entity.diaregreso|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Dia_regresado</th>
            <td>{{ entity.diaregresado|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Comentario</th>
            <td>{{ entity.comentario }}</td>
        </tr>
        <tr>
            <th>Recibido</th>
            <td>{{ entity.recibido }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('record') }}">
            Regresar a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('record_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('record_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
