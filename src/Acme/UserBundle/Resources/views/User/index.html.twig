<table class="records_list" id="example">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno</th>
            <th>Puesto</th>
            <th>Fecha de nacimiento</th>
            <th>Username</th>
            <th>Email</th>
            <th>Enabled</th>
            <th>Lastlogin</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('user_show', { 'id': entity.id }) }}">Mostar</a>
                    </li>
                    <li>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
            </td>
            <td>{{ entity.id }}</td>
            <th>{{ entity.nombre}}</th>
            <th>{{ entity.apellidoPaterno}}</th>
            <th>{{ entity.apellidoMaterno}}</th>
            <th>{{ entity.puesto}}</th>
            <td>{% if entity.fechaNacimiento %}{{ entity.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
            <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
            <td>{{ entity.email }}</td>
            <td>
                {% if entity.enabled == 1 %}
                    Activo
                {% else %}
                    Inactivo
                {% endif %}
            </td>
            <td>{% if entity.lastLogin %}{{ entity.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td><select>
                {% for role in entity.roles %}
                    <option>{{ role }}</option>
                {% endfor %}
            </select></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

