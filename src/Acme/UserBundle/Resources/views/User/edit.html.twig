{% extends 'AcmeUserBundle:Admin:sections.html.twig' %}
{% block section %}
    <h1>User edit</h1>

    <form action="{{ path('user_update', { 'id': entity.id }) }}" method="post" 
        novalidate="novalidate" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <select multiple name="roles[]" id="role_select">
            <option value="ROLE_ADMIN" >Super Administrador</option>
            <option value="ROLE_USER"  >Administrador</option>
        </select>
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <!--<a href="{{ path('user') }}">-->
                Regresar a la lista
            </a>
        </li>
        <li>
            <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Eliminar</button>
            </form>
        </li>
    </ul>
{% endblock %}
{% block morescripts %}
    <script>
        $(document).ready(function() {
            {% for role in roles %}
                $('#role_select option[value={{ role }}]"').attr('selected', 'selected');
            {% endfor %}
        });
        
    </script>
{% endblock %}