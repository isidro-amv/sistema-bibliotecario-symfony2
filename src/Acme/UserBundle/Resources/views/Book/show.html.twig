{% extends 'AcmeUserBundle:Admin:sections.html.twig' %}
{% block section %}
<h1>Libro</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Titulo</th>
            <td>{{ entity.titulo }}</td>
        </tr>
        <tr>
            <th>Autor</th>
            <td>
                <select>
                    {% for enti in entity_autor %} 
                        <option>{{enti.nombre}} {{enti.apellidopaterno}} {{enti.apellidomaterno}}</option>
                    {% endfor %}
                </select>
            </td>
        </tr>
        <tr>
            <th>Cantidad</th>
            <td>{{ entity.cantidad }}</td>
        </tr>
        <tr>
            <th>Clasificacion</th>
            <td>{{ entity.clasificacion }}</td>
        </tr>
        <tr>
            <th>Precio</th>
            <td>{{ entity.precio }}</td>
        </tr>
        <tr>
            <th>Signatura_topografica</th>
            <td>{{ entity.signaturatopografica }}</td>
        </tr>
        <tr>
            <th>Tema</th>
            <td>{{ entity.tema }}</td>
        </tr>
        <tr>
            <th>Editorial</th>
            <td>{{ entity.editorial }}</td>
        </tr>
        <tr>
            <th>Lugar_publicacion</th>
            <td>{{ entity.lugarpublicacion }}</td>
        </tr>
        <tr>
            <th>Fecha_edicion</th>
            <td>{{ entity.fechaedicion|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Idioma</th>
            <td>{{ entity.idioma }}</td>
        </tr>
        <tr>
            <th>Tamano</th>
            <td>{{ entity.tamano }}</td>
        </tr>
        <tr>
            <th>Descrip_fisica</th>
            <td>{{ entity.descripfisica }}</td>
        </tr>
        <tr>
            <th>Formato</th>
            <td>{{ entity.formato }}</td>
        </tr>
        <tr>
            <th>Notas</th>
            <td>{{ entity.notas }}</td>
        </tr>
        <tr>
            <th>Isbn</th>
            <td>{{ entity.isbn }}</td>
        </tr>
        <tr>
            <th>Volumen</th>
            <td>{{ entity.volumen }}</td>
        </tr>
        <tr>
            <th>Edicion</th>
            <td>{{ entity.edicion }}</td>
        </tr>
        <tr>
            <th>Paginas</th>
            <td>{{ entity.paginas }}</td>
        </tr>
        <tr>
            <th>Status_record</th>
            <td>{{ entity.statusrecord }}</td>
        </tr>
        <tr>
            <th>Estado_fisico</th>
            <td>{{ entity.estadofisico }}</td>
        </tr>
        <tr>
            <th>Hits</th>
            <td>{{ entity.hits }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_book') }}">
            Regresar a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('admin_book_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('admin_book_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
{% endblock %}